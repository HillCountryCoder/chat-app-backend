{
  "name": "backend",
  "version": "1.0.0",
  "description": "Real-time chat application backend with websockets and redis",
  "main": "src/server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "open:mongo-express": "node scripts/open-mongo-express.mjs",
    "dev:setup": "npm install && docker-compose up -d && npm run dev",
    "db:up:open": "npm run db:up && npm run open:mongo-express",
    "dev:setup:open": "npm install && npm run db:up:open && npm run dev",
    "logs:clear": "node scripts/clear-logs.mjs"
  },
  "keywords": [
    "chat",
    "realtime",
    "mongodb",
    "redis",
    "socket.io"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.9",
    "nodemon": "^3.1.9",
    "open": "^10.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
