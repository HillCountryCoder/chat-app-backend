{
  "name": "backend",
  "version": "1.0.0",
  "description": "Real-time chat application backend with websockets and redis",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "concurrently \"eslint --watch . --ext .ts\" \"tsc --watch --noEmit\" \"nodemon --exec ts-node src/server.ts\"",
	"lint": "eslint . --ext .ts",
  	"lint:watch": "eslint --watch . --ext .ts",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "open:mongo-express": "node scripts/open-mongo-express.mjs",
    "dev:setup": "npm install && docker-compose up -d && npm run dev",
    "db:up:open": "npm run db:up && npm run open:mongo-express",
    "dev:setup:open": "npm install && npm run db:up:open && npm run dev",
    "logs:clear": "node scripts/clear-logs.mjs",
    "db:seed": "ts-node src/scripts/seed-database.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
	"generate-api-key": "node scripts/generate-api-key.js"
  },
  "keywords": [
    "chat",
    "realtime",
    "mongodb",
    "redis",
    "socket.io"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/redis-errors": "^1.2.3",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.15.0",
    "mongoose": "^8.12.1",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2",
	"@aws-sdk/client-s3": "^3.410.0",
    "@aws-sdk/s3-request-presigner": "^3.410.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/ui": "^3.0.9",
    "c8": "^10.1.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.9",
    "open": "^10.1.0",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.0.9"
  }
}
